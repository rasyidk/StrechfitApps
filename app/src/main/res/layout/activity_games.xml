<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Games.GamesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="@dimen/mainmarginn"
                app:cardBackgroundColor="@color/colorpurple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingRight="25dp"
                    android:paddingLeft="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GAMES"
                    android:textSize="40dp"
                    android:fontFamily="@font/futurabold"
                    android:textColor="@color/white"/>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="550dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/games_img_main"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="3">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >

                    <RelativeLayout
                        android:layout_centerVertical="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/games_img_games1"
                            android:layout_marginLeft="@dimen/mainmarginn"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/icon_games1"/>

                        <ImageView
                            android:id="@+id/games_img_games2"
                            android:layout_marginRight="@dimen/mainmarginn"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/icon_games2"/>
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                    <RelativeLayout
                        android:layout_centerVertical="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/games_img_games6"
                            android:layout_marginLeft="@dimen/mainmarginn"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/icon_games6"/>

                        <ImageView
                            android:id="@+id/games_img_games3"
                            android:layout_marginRight="@dimen/mainmarginn"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/icon_games3"/>
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >

                    <RelativeLayout
                        android:layout_centerVertical="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/games_img_games5"
                            android:layout_marginLeft="@dimen/mainmarginn"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/icon_games5"/>

                        <ImageView
                            android:id="@+id/games_img_games4"
                            android:layout_marginRight="@dimen/mainmarginn"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/icon_games4"/>
                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

        </FrameLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginBottom="150dp"
            android:src="@drawable/logo_strechfit"/>
    </LinearLayout>
</ScrollView>